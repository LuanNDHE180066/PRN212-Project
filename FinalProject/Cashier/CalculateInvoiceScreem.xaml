<Window x:Class="FinalProject.Cashier.CalculateInvoiceScreem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject.Cashier"
        mc:Ignorable="d"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:xe="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="CalculateInvoiceScreem" Height="450" Width="1100">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- Left Panel with Background Image -->
        <StackPanel Grid.Row="0" Grid.Column="0">
            <StackPanel.Background>
                <ImageBrush ImageSource="/Admin/avatars-000699683875-m5pnre-t500x500.jpg"/>
            </StackPanel.Background>
        </StackPanel>

        <!-- Right Panel for Invoice Details -->
        <WrapPanel Margin="10" Grid.Row="0" Grid.Column="1">
            <StackPanel Margin="0,0,10,0" Orientation="Horizontal" Width="100">
                <TextBlock Text="InvoiceID:" Width="80" FontWeight="Bold"/>
                <TextBox Width="50" IsReadOnly="True" Name="tbxInvoiceId" Margin="5,0" />
            </StackPanel>

            <StackPanel Margin="0,0,10,0" Orientation="Horizontal" Width="120">
                <TextBlock Text="DeviceID:" Width="80" FontWeight="Bold"/>
                <TextBox Width="80" IsReadOnly="True" Name="txbDevice" Margin="5,0" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Width="180" Margin="0,0,10,0">
                <TextBlock Text="Date:" Width="40" FontWeight="Bold"/>
                <DatePicker Width="120" Name="dpkDate"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Width="100" Margin="0,0,10,0">
                <TextBlock Text="Total:" Width="40" FontWeight="Bold"/>
                <TextBox IsReadOnly="True" Width="70" Name="tbxTotal" Margin="5,0" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Width="160">
                <TextBlock Text="Customer:" Width="80" FontWeight="Bold"/>
                <TextBox Width="100" Name="txbCustomer" Margin="5,0" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Width="130">
                <TextBlock Text="Staff:" Width="40" FontWeight="Bold"/>
                <TextBox Width="100" Name="txbStaff" Margin="5,0" />
            </StackPanel>
        </WrapPanel>

        <!-- Good Details and Time Used Device Sections -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Good Details Section -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock FontWeight="Bold" Text="GOOD DETAIL" HorizontalAlignment="Center" Margin="0,5"/>
                <DataGrid Width="192" Name="dgvGood" CanUserAddRows="False" IsReadOnly="True" AutoGenerateColumns="False" Margin="0,5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Good Name" Binding="{Binding Path=Goods.GName}"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Path=Quantity}"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Path=Amount}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Border Width="192" BorderBrush="Black" BorderThickness="0.25" Margin="0,10,0,10"/>
                <StackPanel Orientation="Horizontal" Width="300">
                    <TextBlock Text="Total:" Margin="15,0,10,0"/>
                    <TextBox x:Name="txbGoodTotal" Width="60" IsReadOnly="True" Margin="5,0"/>
                </StackPanel>
                <Button Width="70" Click="btnAddGood_Click" x:Name="btnAddGood" Margin="0,10,0,0" Content="Add Good"/>
            </StackPanel>

            <!-- Time Used Device Section -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock FontWeight="Bold" Text="Time Used Device" HorizontalAlignment="Center" Margin="0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Width="30" Text="From:" FontWeight="Bold"/>
                    <xe:MaskedTextBox Name="timeInput" Mask="00:00" ValueDataType="{x:Type sys:String}" Width="100" HorizontalAlignment="Center" LostFocus="timeInput_LostFocus" Margin="5,0"/>
                    <Button x:Name="btnSetFrom" Content="Set From" Width="70" Click="SetFrom_Click"/>
                    <TextBlock Name="errorText" Foreground="Red" Visibility="Collapsed" Margin="5,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Width="30" Text="To:" FontWeight="Bold"/>
                    <xe:MaskedTextBox Name="timeOuput" Mask="00:00" ValueDataType="{x:Type sys:String}" Width="100" HorizontalAlignment="Center" LostFocus="timeOuput_LostFocus" Margin="5,0"/>
                    <Button x:Name="btnSetTo" Content="Set To" Width="70" Click="SetTo_Click"/>
                    <TextBlock Name="errorText2" Foreground="Red" Visibility="Collapsed" Margin="5,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Width="30" Text="Total:" FontWeight="Bold"/>
                    <TextBox Width="300" x:Name="txbTotalUseDevice" Margin="5,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Save Button -->
        <Button Grid.Column="0" Grid.Row="1" Margin="0,70,50,0" Name="btnSave" Click="btnSave_Click" Content="Save" Height="30" Width="100" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
    </Grid>
</Window>