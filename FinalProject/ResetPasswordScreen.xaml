<Window x:Class="FinalProject.ResetPasswordScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Password" Height="300" Width="400" WindowStartupLocation="CenterScreen" Background="#1A1A1A">

    <Grid>
        <Border Padding="20" Background="#2E2E2E" CornerRadius="10" Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Reset Password"
                       HorizontalAlignment="Center"
                       FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,10,0,20"/>

                <StackPanel Grid.Row="1" Margin="10" HorizontalAlignment="Center" Width="280">
                    <Label Content="Username" FontSize="14" Foreground="White"/>
                    <TextBox Name="txtUsername" FontSize="16" Height="30" Padding="5" BorderBrush="#D32F2F" BorderThickness="2" Background="#3A3A3A" Foreground="White"/>
                </StackPanel>

                <Button Grid.Row="2" Content="Reset Password" Width="280" Height="40" Name="btnReset" Click="btnReset_Click"
                        Background="#D32F2F" Foreground="White" FontSize="14" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Margin="10"/>

                <TextBlock Grid.Row="3" Name="lblMessage" Foreground="#FF5252" FontSize="14" HorizontalAlignment="Center" Margin="10"/>
            </Grid>
        </Border>
    </Grid>
</Window>