<Window x:Class="FinalProject.CustomerManager.OrderFood"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject.CustomerManager"
        mc:Ignorable="d"
        Title="OrderFood" Height="450" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Grid.Row="0">
            <Label VerticalAlignment="Center">Người dùng: </Label>
            <Label FontSize="20" FontWeight="Bold" Name="lbName"></Label>
            <Button HorizontalAlignment="Right" Width="150" Height="30" Margin="300 0 0 0" Click="Button_Click_2">Lịch sử Order</Button>
            <Button HorizontalAlignment="Right" Width="160" Height="30" Margin="20 0 0 0" Click="Button_Click_1">Kết thúc</Button>
        </StackPanel>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel Name="panelFood">
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>
